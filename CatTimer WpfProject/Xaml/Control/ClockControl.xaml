<UserControl x:Class="CatTimer_WpfProject.ClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatTimer_WpfProject"
             mc:Ignorable="d" 
             d:DesignHeight="344" d:DesignWidth="394"
             Name="ClockUserControl">

    <!--时钟（Clock）-->
    <Viewbox>
        <TextBlock Name="ClockTextBlock" Text="{Binding ElementName=ClockUserControl,Path=Time.TimeToHourString}"
                   Foreground="#FF656565"
                   FontFamily="{StaticResource MaybeCuteFontFamily}"/>
    </Viewbox>

</UserControl>
